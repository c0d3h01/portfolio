---
import { SEOMetadata } from "astro-seo-metadata";

const siteData = {
  name: "Harshal Sawant",
  author: "Harshal Sawant",
  description: "Portfolio of Harshal Sawant, a software developer based in Mumbai, specializing in full-stack development and system architecture.",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEOMetadata
      siteName={siteData.name}
      title="Harshal Sawant | Portfolio"
      description={siteData.description}
      favicon="/favicon.svg"
      author={siteData.author}
      canonicalUrl={Astro.url.toString()}
      type="website"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;500;700&display=swap");

  :root {
    --bg: #050505;
    --green: #00ff41;
    --dim-green: #008f11;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background-color: var(--bg);
    color: #fff;
    font-family: "Fira Code", monospace;
    overflow: hidden; /* Prevent scrolling since it's a single-screen layout */
  }

  /* CRTs Scanline Effect */
  body::before {
    content: " ";
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background:
      linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.2) 50%),
      linear-gradient(
        90deg,
        rgba(255, 0, 0, 0.03),
        rgba(0, 255, 0, 0.01),
        rgba(0, 0, 255, 0.03)
      );
    z-index: 10;
    background-size:
      100% 3px,
      3px 100%;
    pointer-events: none;
  }
</style>
